<%- include('../partials/header') %>

<table>
  <thead>
    <tr style="border-bottom: 2px solid red">
      <th>Symbol<ion-icon name="caret-down-outline"></ion-icon></th>
      <th>Name</th>
      <th>Price<ion-icon name="caret-down-outline"></ion-icon></th>
      <th>Currency</th>
      <th>CEO</th>
      <th>Avg Volume</th>
      <th>Market Cap</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% tickers.forEach(ticker => { %>
    <tr>
      <!-- <td style="color: red"><%= ticker.symbol %>&nbsp;&nbsp;&nbsp;<ion-icon name="add-circle-outline"></ion-icon></td> -->
      <style>
        /* td {color: black};  */
      </style>
      <td id="ticker-symbol"><%= ticker.symbol %></td>
      <td><%= ticker.name %></td>
      <td><%= ticker.price %></td>
      <td><%= ticker.currency %></td>
      <td><%= ticker.ceo %></td>
      <td><%= ticker.avgVolume %></td>
      <td><%= ticker.marketcap %></td>
      <% if (user) { %>
      <td>
        <i class="fa-regular fa-star"></i>&nbsp;&nbsp;&nbsp;
        <!-- <div>
          <select name="" id="">
            <option value="">watchlist 01</option>
            <option value="">watchlist 02</option>
            <option value="">watchlist 03</option>
          </select>
        </div> -->
      </td>
      <% } %>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
