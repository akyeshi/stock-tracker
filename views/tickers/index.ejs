<%- include('../partials/header') %>

<table>
  <thead>
    <tr style="border-bottom: 2px solid red">
      <th>Symbol</th>
      <th>Name</th>
      <th>Price</th>
      <th>Currency</th>
      <th>CEO</th>
      <th>Avg Volume</th>
      <th>Market Cap</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% tickers.forEach(ticker => { %>
    <tr>
      <!-- <td style="color: red"><%= ticker.symbol %>&nbsp;&nbsp;&nbsp;<ion-icon name="add-circle-outline"></ion-icon></td> -->
      <style>
        /* td {color: black};  */
      </style>
      <td style="color: red"><%= ticker.symbol %></td>
      <td><%= ticker.name %></td>
      <td><%= ticker.price %></td>
      <td><%= ticker.currency %></td>
      <td><%= ticker.ceo %></td>
      <td><%= ticker.avgVolume %></td>
      <td><%= ticker.marketcap %></td>
      <% if (user) { %>
      <td><ion-icon name="add-circle-outline"></ion-icon>&nbsp;&nbsp;&nbsp;</td>
      <% } %>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
